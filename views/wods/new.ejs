
<%- include('../partials/header.ejs') %> 


<h2>Create a Wod</h2>
    <form action="/" method="POST">
        <label>Title:
            <input type="text" name="wodTitle" id="wodTitle">
        </label>
        <label>Workout Type:
            <select name="wodType" class="form-control">
                <option value="strength">Strength</option>
                <option value="cardio">Cardio</option>
                <option value="mix">Mix</option>
            </select>
        </label><br>
        <label>Workout Style:
            <input type="text" name="wodStyle" id="wodStyle" placeholder="AMRAP/EMOM/FOR TIME">
        </label>
        <label>Body Zone:
            <select name="bodyZone" class="form-control">
                <option value="legs">Legs</option>
                <option value="arms">Arms</option>
                <option value="chest" selected>Chest</option>
                <option value="back">Back</option>
                <option value="core">Core</option>
                <option value="shoulders">Shoulders</option>
                <option value="fullBody">Full Body/Cardio</option>
            </select>
        </label><br>
        <label>Movement:
            <input type="text" name="movement" class="form-control">
        </label><br>
        <label>Duration:
            <input type="number" name="duration" 
                id="duration" class="form-control">
        </label>
        <input type="submit" value="Add Wod" class="btn btn-dark" id="addWod">
    </br>
    <a href="#" class="btn btn-dark goBack">Go Back</a>
    </form>

<%- include('../partials/footer.ejs') %> 

