<%- include('../partials/header') %> 

<form id="add-movement-form" action="/movements/new" method="POST">
<label>Name:
    <input type="text" name="name" id="name" class="form-control"> 
</label><br>
<label>Body Zone:
    <select name="bodyZone" class="form-control">
        <option value="legs" selected>Legs</option>
        <option value="arms">Arms</option>
        <option value="chest">Chest</option>
        <option value="back">Back</option>
        <option value="core">Core</option>
        <option value="shoulders">Shoulders</option>
        <option value="fullBody">Full Body/Cardio</option>
    </select>
</label><br>
<label>Description:
    <textarea rows = "5" cols = "60" name="description" placeholder="Enter detials here..."></textarea>
</label><br>
<label>Image:
    <input type="file" name="image" id="image">
</label>
<input type="submit" value="Add Movement">
</form>

