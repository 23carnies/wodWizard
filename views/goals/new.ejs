<%- include('../partials/header') %>

<!-- Body Content Goals Tab -->
<div class="card-body" >
    <div class="tab-pane show fade" id="nav-goals" role="tabpanel" aria-labelledby="nav-goals-tab">
      <h5>Goals should be SMART: <span>S</span>pecific, <span>M</span>easurable, <span>A</span>chievable, <span>R</span>elevant, and <span>T</span>ime Bound</h5>
      <form action="/users/profile" method="POST">
        <label>Goal:
          <input type="text" name="title" id="inputGoal" class="form-control">
        </label><br>
        <label>Details:
          <textarea name="content" id="goalContent" cols="30" rows="2" class="form-control"></textarea>
        </label><br>
        <label>Complete By:
          <input type="date" name="goalDate" id="goalDate" class="form-control">
        </label><br>
        <label>Achieved?
          <input type="checkbox" name="complete" id="completeGoal" class="form-control">
        </label><br>
        <input type="submit" name="Submit" class="btn btn-dark">
      </form>
    </div>
  </div>

  <%- include('../partials/footer') %>